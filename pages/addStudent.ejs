<head></head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Student</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }
        header {
            background-color: #4CAF50;
            color: white;
            text-align: center;
            padding: 20px;
        }
        header h1 {
            margin: 0;
            font-size: 2.5em;
        }
        .container {
            max-width: 600px;
            margin: 30px auto;
            padding: 30px;
            background-color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }
        form {
            display: flex;
            flex-direction: column;
        }
        label {
            font-size: 1.2em;
            margin-bottom: 5px;
        }
        input[type="text"], input[type="number"] {
            padding: 10px;
            font-size: 1.1em;
            margin-bottom: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            width: 100%;
            box-sizing: border-box;
        }
        input[type="text"]:focus, input[type="number"]:focus {
            border-color: #4CAF50;
            outline: none;
        }
        button {
            background-color: #4CAF50;
            color: white;
            font-size: 1.2em;
            padding: 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            width: 100%;
        }
        button:hover {
            background-color: #45a049;
        }
        .error-message {
            color: red;
            margin-bottom: 15px;
            font-size: 0.9em;
        }
        .back-link {
            text-align: center;
            margin-top: 20px;
            font-size: 1.1em;
        }
        .back-link a {
            text-decoration: none;
            color: #4CAF50;
            font-weight: bold;
            transition: color 0.3s ease;
        }
        .back-link a:hover {
            color: #45a049;
        }
    </style>
</head>
<body>

<h1>Add Student</h1>

<!-- Form to Add Student -->
<form action="/students/add" method="POST">
    <label for="sid">Student ID (4 characters):</label>
    <input type="text" id="sid" name="sid" value="<%= student.sid %>" required>
    <% if (errors && errors.sid) { %>
        <p style="color: red;"><%= errors.sid %></p>
    <% } %>
    <br><br>

    <label for="name">Name (min 2 characters):</label>
    <input type="text" id="name" name="name" value="<%= student.name %>" required>
    <% if (errors && errors.name) { %>
        <p style="color: red;"><%= errors.name %></p>
    <% } %>
    <br><br>

    <label for="age">Age (18 or older):</label>
    <input type="number" id="age" name="age" value="<%= student.age %>" required>
    <% if (errors && errors.age) { %>
        <p style="color: red;"><%= errors.age %></p>
    <% } %>
    <br><br>

    <button type="submit">Add Student</button>
</form>

<p><a href="/students">Back to Students</a></p>
